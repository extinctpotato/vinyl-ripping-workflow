Bootstrap: docker
From: alpine:3.17.2
Stage: compile

%post
	apk add --update alpine-sdk meson git cmake glib-dev libao-dev gtk+3.0-dev
	git clone https://github.com/thp/wavbreaker.git
	cd wavbreaker
	meson build
	ninja -C build
	ninja -C build install

Bootstrap: docker
From: alpine:3.17.2
Stage: final

%files
	/usr/local/bin/wavbreaker /usr/bin/wavbreaker
